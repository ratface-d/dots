attempts = 0

while True:
    code = input("please give me the pin number: ")
    attempts += 1

    if code == "12":
        success = True
        break

    if attempts == 3:
        success = False
        break

    print("wrong pin entered. idiot")

if success:
    print("good job. you did it")
else:
    print("you idiot. you really dont know the pin?")
